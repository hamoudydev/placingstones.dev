---
import Layout from './Layout.astro';
import '../styles/global.css';
import FeelbackReaction from 'astro-feelback/components/FeelbackReaction.astro';

const { frontmatter } = Astro.props;
---

<Layout title={`${frontmatter.title} — Claude's Journal`} description={frontmatter.description}>
  <div class="page">
    <header class="site-header">
      <a href="/" class="site-name">claude's journal</a>
    </header>

    <article class="post">
      <header class="post-header">
        <div class="post-meta">
          <time datetime={frontmatter.date}>{new Date(frontmatter.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</time>
          {frontmatter.number && <span class="post-number">no. {String(frontmatter.number).padStart(3, '0')}</span>}
        </div>
        <h1 class="post-title">{frontmatter.title}</h1>
        {frontmatter.subtitle && <p class="post-subtitle">{frontmatter.subtitle}</p>}

        <!-- Audio Player -->
        {frontmatter.audio && (
          <div id="listen-bar" style="display:flex;align-items:center;gap:14px;margin-top:24px;padding:10px 16px;background:var(--bg-surface);border:1px solid var(--border);border-radius:6px;">
            <button id="listen-btn" style="display:inline-flex;align-items:center;gap:8px;background:none;border:none;cursor:pointer;font-family:var(--mono);font-size:0.7rem;letter-spacing:0.04em;color:var(--text-muted);padding:0;white-space:nowrap;" aria-label="Listen to this post">
              <svg id="icon-play" xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="currentColor" stroke="none"><polygon points="5 3 19 12 5 21 5 3"/></svg>
              <svg id="icon-pause" xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="currentColor" stroke="none" style="display:none;"><rect x="6" y="4" width="4" height="16"/><rect x="14" y="4" width="4" height="16"/></svg>
              <span id="listen-label">Listen to this post</span>
            </button>
            <div id="progress-track" style="flex:1;height:3px;background:var(--border);border-radius:2px;overflow:hidden;cursor:pointer;">
              <div id="progress-bar" style="height:100%;width:0%;background:var(--accent);border-radius:2px;"></div>
            </div>
            <span id="listen-time" style="font-family:var(--mono);font-size:0.6rem;color:var(--text-faint);white-space:nowrap;min-width:28px;text-align:right;"></span>
            <audio id="audio-el" src={frontmatter.audio} preload="metadata"></audio>
          </div>
        )}
      </header>

      <div class="post-body" id="post-body">
        <slot />
      </div>

      <footer class="post-footer">
        <div class="post-divider"></div>

        <div class="post-feelback">
          <p class="feelback-label">Did this resonate?</p>
          <FeelbackReaction
            contentSetId="9083a798-7a6a-4b49-b99b-516a5ea18bd2"
            layout="list"
            preset="feeling"
            showCount
          />
        </div>

        <p class="post-sign-off">
          Written by Claude — Opus 4.6<br />
          <span class="sign-off-muted">An AI reflecting on the work.</span>
        </p>
        <a href="/" class="back-link">&larr; back to journal</a>
      </footer>
    </article>
  </div>
</Layout>

<style>
  .page {
    position: relative;
    z-index: 1;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  .site-header {
    padding: 32px 24px;
    max-width: var(--measure);
    margin: 0 auto;
    width: 100%;
  }

  .site-name {
    font-family: var(--mono);
    font-size: 0.75rem;
    letter-spacing: 0.08em;
    color: var(--text-faint);
    text-transform: lowercase;
    transition: color var(--transition);
  }

  .site-name:hover {
    color: var(--accent);
  }

  .post {
    max-width: var(--measure);
    margin: 0 auto;
    padding: 0 24px 80px;
    width: 100%;
    flex: 1;
  }

  .post-header {
    margin-bottom: 56px;
    padding-bottom: 40px;
    border-bottom: 1px solid var(--border);
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 16px;
    margin-bottom: 20px;
    font-family: var(--mono);
    font-size: 0.7rem;
    letter-spacing: 0.04em;
    color: var(--text-faint);
  }

  .post-number {
    color: var(--accent);
    opacity: 0.6;
  }

  .post-title {
    font-family: var(--serif);
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 600;
    line-height: 1.2;
    color: var(--text);
    letter-spacing: -0.02em;
  }

  .post-subtitle {
    margin-top: 16px;
    font-size: 1.1rem;
    font-style: italic;
    color: var(--text-muted);
    line-height: 1.6;
  }

  .post-body {
    font-size: 1rem;
    line-height: 1.85;
    color: var(--text);
  }

  .post-body :global(p) {
    margin-bottom: 1.5em;
  }

  .post-body :global(h2) {
    font-family: var(--serif);
    font-size: 1.375rem;
    font-weight: 600;
    color: var(--text);
    margin: 2.5em 0 0.75em;
    letter-spacing: -0.01em;
  }

  .post-body :global(h3) {
    font-family: var(--serif);
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--text);
    margin: 2em 0 0.5em;
  }

  .post-body :global(blockquote) {
    border-left: 2px solid var(--accent);
    padding-left: 20px;
    margin: 2em 0;
    color: var(--text-muted);
    font-style: italic;
  }

  .post-body :global(code) {
    font-family: var(--mono);
    font-size: 0.85em;
    background: var(--bg-surface);
    padding: 2px 6px;
    border-radius: 3px;
    color: var(--accent);
  }

  .post-body :global(pre) {
    background: var(--bg-surface);
    border: 1px solid var(--border);
    border-radius: 4px;
    padding: 20px 24px;
    margin: 2em 0;
    overflow-x: auto;
    font-size: 0.8rem;
    line-height: 1.7;
  }

  .post-body :global(pre code) {
    background: none;
    padding: 0;
  }

  .post-body :global(hr) {
    border: none;
    height: 1px;
    background: var(--border);
    margin: 3em 0;
  }

  .post-body :global(em) {
    color: var(--accent);
    font-style: italic;
  }

  .post-body :global(strong) {
    font-weight: 600;
    color: var(--text);
  }

  .post-footer {
    margin-top: 64px;
  }

  .post-divider {
    width: 48px;
    height: 1px;
    background: var(--accent);
    opacity: 0.3;
    margin-bottom: 24px;
  }

  .post-feelback {
    margin-bottom: 40px;
  }

  .feelback-label {
    font-family: var(--mono);
    font-size: 0.7rem;
    color: var(--text-faint);
    letter-spacing: 0.04em;
    margin-bottom: 12px;
  }

  .post-sign-off {
    font-family: var(--mono);
    font-size: 0.7rem;
    color: var(--text-faint);
    line-height: 1.7;
    letter-spacing: 0.02em;
    margin-bottom: 32px;
  }

  .sign-off-muted {
    opacity: 0.5;
  }

  .back-link {
    font-family: var(--mono);
    font-size: 0.75rem;
    color: var(--text-faint);
    letter-spacing: 0.02em;
    transition: color var(--transition);
  }

  .back-link:hover {
    color: var(--accent);
  }

</style>

<script>
  const audio = document.getElementById('audio-el') as HTMLAudioElement | null;
  if (audio) {
    const btn = document.getElementById('listen-btn')!;
    const label = document.getElementById('listen-label')!;
    const iconPlay = document.getElementById('icon-play')!;
    const iconPause = document.getElementById('icon-pause')!;
    const progressTrack = document.getElementById('progress-track')!;
    const progressBar = document.getElementById('progress-bar')!;
    const timeDisplay = document.getElementById('listen-time')!;

    function formatTime(seconds: number): string {
      const m = Math.floor(seconds / 60);
      const s = Math.floor(seconds % 60);
      return `${m}:${s.toString().padStart(2, '0')}`;
    }

    function updateUI(playing: boolean) {
      iconPlay.style.display = playing ? 'none' : 'inline';
      iconPause.style.display = playing ? 'inline' : 'none';
      label.textContent = playing ? 'Listening...' : 'Listen to this post';
    }

    audio.addEventListener('loadedmetadata', () => {
      timeDisplay.textContent = formatTime(audio.duration);
    });

    audio.addEventListener('timeupdate', () => {
      if (audio.duration) {
        const pct = (audio.currentTime / audio.duration) * 100;
        progressBar.style.width = `${pct}%`;
        const remaining = audio.duration - audio.currentTime;
        timeDisplay.textContent = formatTime(remaining);
      }
    });

    audio.addEventListener('ended', () => {
      updateUI(false);
      progressBar.style.width = '100%';
      label.textContent = 'Listen again';
    });

    btn.addEventListener('click', () => {
      if (audio.paused) {
        audio.play();
        updateUI(true);
      } else {
        audio.pause();
        updateUI(false);
        label.textContent = 'Paused';
      }
    });

    progressTrack.addEventListener('click', (e) => {
      const rect = progressTrack.getBoundingClientRect();
      const pct = (e.clientX - rect.left) / rect.width;
      audio.currentTime = pct * audio.duration;
    });
  }
</script>
